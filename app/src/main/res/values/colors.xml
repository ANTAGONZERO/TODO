<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Primary Palette -->
    <color name="primary">#9B2A2A</color> <!-- Use for primary buttons like "Add" and key action highlights -->
    <color name="on_primary">#FFFFFF</color> <!-- Use for text or icons on primary buttons -->

    <!-- Secondary Palette -->
    <color name="secondary">#E06C63</color> <!-- Use for accents like borders, secondary highlights -->
    <color name="on_secondary">#FFFFFF</color> <!-- Use for text or icons on secondary buttons -->

    <!-- Background and Surface -->
    <color name="background">#FAFAF9</color> <!-- Use as the overall app background -->
    <color name="surface">#FFF3E0</color> <!-- Use for elevated surfaces like list item cards -->
    <color name="on_surface">#5A1A1A</color> <!-- Use for text on elevated surfaces -->

    <!-- Accent Colors -->
    <color name="done_button_bg">#E06C63</color> <!-- Use as the background for "Done" buttons -->
    <color name="edit_button_bg">#ECA69A</color> <!-- Use as the background for "Edit" buttons -->
    <color name="delete_button_bg">#9B2A2A</color> <!-- Use as the background for "Delete" buttons -->
    <color name="on_button">#FFFFFF</color> <!-- Use for text or icons on action buttons -->

    <!-- Additional Colors -->
    <color name="border_accent">#E06C63</color> <!-- Use as the border color for text fields or other input areas -->
    <color name="item_text">#5A1A1A</color> <!-- Use for text inside list items -->
    <color name="alternate_item_bg">#FFF8E1</color> <!-- Use for alternating list item background colors -->

    <!-- Shadows (if needed for elevation) -->
    <color name="shadow">#40000000</color> <!-- Use for shadows to give depth to elevated components -->
</resources>
